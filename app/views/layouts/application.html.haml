!!! Strict
%html
  %head
    %title 
      Radiant CMS - Extension Registry
      = !@extension.blank? && !@extension.new_record? ? "- #{h(@extension.name)}" : ""
    = stylesheet_link_tag "screen"
    = javascript_include_tag :defaults
    %link{:href => "/extensions.atom", :rel => "alternate", :type => "application/atom+xml", :title => "Radiant Extension Registry"}
  %body{:id => "#{@controller.controller_name}_#{@controller.action_name}"}
    #header_wrapper
      #header
        #logo 
          .title Radiant CMS
          .subtitle Extension Registry
          .parent_site= link_to "RadiantCMS.org", "http://radiantcms.org"
    #navigation_wrapper
      #navigation
        %ul.account_links{:class => logged_in? ? "in" : "out"}
          - if logged_in?
            %li#account_link{:class => (@selected == :profile ? "here" : nil)}
              = link_to "My Profile", current_author
            %li#logout_link= link_to "Logout", logout_url
          - else
            %li#signup_link{:class => (@selected == :signup ? "here" : nil)}
              = link_to "Signup", signup_url
            %li#login_link.last{:class => (@selected == :login ? "here" : nil)}
              = link_to "Login", login_url
        %ul.primary_links
          %li#index_link{:class => (@selected == :extensions ? "here" : nil)}
            = link_to "Extensions", extensions_path
          %li#authors_link{:class => (@selected == :authors ? "here" : nil)}
            = link_to "Authors", authors_path
          %li#search_link{:class => (@selected == :search ? "here" : nil)}
            = link_to "Search", search_path
    - if content_for? :head
      #head_wrapper
        #head
          = yield
    #main_wrapper
      #main
        #content
          - if content_for? :actions
            #actions
              = yield :actions
          - if @h1 || @title
            %h1= @h1 || @title
          - flash.keys.each do |key|
            %p{:id=>key}= flash[key]
          = yield
    #footer_wrapper
      #footer
        %p
          Copyright &copy;
          = "2008&#8211;#{Date.today.year}"
          the Radiant CMS development team.<br />
          = link_to "Radiant CMS", "http://radiantcms.org"
          is copyright &copy;
          = "2006&#8211;#{Date.today.year}"
          John W. Long and Sean Cribbs.
