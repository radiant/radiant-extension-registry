- @title = "Extension Authors"

#authors
  -unless @authors.blank?
    - @authors.each do |author|
      %div[author]
        .name
          = image_tag gravatar_url(author.email)
          = link_to author.name.gsub(/<\/?[^>]*>/, ""), author_path(author)
        - unless author.notes.blank?
          .notes= textilize(author.notes.gsub(/<\/?[^>]*>/, ""))
        - unless author.website.blank?
          .website
            Website:
            = link_to author.website.gsub(/<\/?[^>]*>/, ""), author.website